{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "lib": ["es5", "es6", "es2016", "es2017", "es2021"],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "esnext",
      "isolatedModules": false,
      "noEmit": false,
      "outDir": "dist",
      "declaration": false,
      "resolveJsonModule": true
    },
    // "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*/__tests__"]
  }
  